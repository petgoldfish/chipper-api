{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"lib": ["es5", "es6", "esnext"],
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
